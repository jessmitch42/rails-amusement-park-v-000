<h1>Login</h1>

<%= form_tag( url: "/signin", method: "post" ) do  %>
  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag "user[name]" %>
  </div>

  <div class="field">
    <%= label_tag "Password" %><br>
    <%= password_field_tag "user[password]" %>
  </div>
  <div class="field">
    <%= label_tag "Password Confirmation:" %><br>
    <%= password_field_tag "user[password_confirmation]" %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign In"%>
  </div>
<% end %>
