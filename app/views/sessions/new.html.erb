<h1>Login</h1>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do
%>
  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </div>

  <div class="field">
    <%= label_tag "Password" %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= label_tag "Password Confirmation:" %><br>
    <%= password_field_tag :password_confirmation %>
  </div>

  <div class="actions">
    <%= submit_tag "Login"%>
  </div>
<% end %>
